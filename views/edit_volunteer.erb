<h1>Manage <%= @volunteer.name %></h1>

<form class="form-group" action="/volunteer/<%= @volunteer.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="update_name">New Name:</label>
  <input type="text" name="update_name" value="">

  <button type="submit">Update Volunteer</button>
</form>

<form class="" action="/volunteer/<%= @volunteer.id %>/edit" method="post">
  <input type="hidden" name="_method" value="delete">
  <button title="Delete Button" type="submit">Delete Volunteer</button>
</form>

<a href="/"><button type="button" name="button">Return Home</button></a>
