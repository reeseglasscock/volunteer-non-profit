<h1>Manage <%= @project.title %></h1>

<form class="form-group" action="/project/<%= @project.id %>/edit" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="update_project">New Name:</label>
  <input type="text" name="update_project" value="">

  <button type="submit">Update Project</button>
</form>

<form class="" action="/project/<%= @project.id %>/edit" method="post">
  <input type="hidden" name="_method" value="delete">
  <button title="Delete Button" type="submit">Delete Project</button>
</form>

<h4>Add volunteers to this project:</h4>
  <% if @volunteers.any? %>
    <form action="/project/<%= @project.id %>/edit" method="post">

      <% @volunteers.each do |volunteer| %>
        <div class="checkbox">
            <input type="checkbox" name="volunteer_ids[]" value="<%= volunteer.id %>"><%= volunteer.name %>
        </div>
      <% end %>
      <button type="submit" class="btn btn-success">Add Volunteers</button>
    </form>
  <% end %>

<a href="/"><button type="button" name="button">Return Home</button></a>
